<div class="row">
  <div class="well col-md-12">
    <h3>Minhas Listas de Tarefas</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="40%">Nome</th>
          <th width="10%">Publica?</th>
          <th width="10%">Fechada?</th>
          <th width="10%"></th>
        </tr>
      </thead>
      <tbody>
        <% @task_lists.each do |task_list| %>
          <tr>
            <td><%= link_to task_list.name, task_list_path(task_list) %></td>
            <td><%= t("boolean_#{task_list.is_public?}") %></td>
            <td><%= t("boolean_#{task_list.done?}") %></td>
            <td><%= finish_task_list_link(task_list)%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'Nova Lista', new_task_list_path, class: "btn btn-primary" %>
</div>
