<div class="well nested-fields">
  <div class="form-group">
    <%= f.label :description, "Nome" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="well form-group">
    <%= f.fields_for :task_children do |task_child| %>
      <%= render 'task_child_fields', f: task_child %>
    <% end %>
    <%= link_to_add_association "Adicionar SubTarefa", f, :task_children, class: "btn btn-primary" %>
  </div>
  <div class="form-group">
    <%= link_to_remove_association "Remover Tarefa", f, class: "btn btn-default" %>
  </div>
  <hr />
</div>
